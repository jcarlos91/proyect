{% extends('EscritoresBundle::main.html.twig') %}
{% block contenido %}
    <article class="col-sm-8 blog-main">
        <form action="{{ path('escritos_new') }}" method="POST" class="form-group" enctype="multipart/form-data">
        {{ form_start (form)}}
        {{ form_errors(form)}}

        {{form_label(form.title)}}
        {{form_errors(form.title)}}
        {{form_widget(form.title,{'attr':{'class': 'form-control'}})}}

        {{form_label(form.blog)}}
        {{form_errors(form.blog)}}
        {{form_widget(form.blog,{'attr':{'class': 'form-control'}})}}

        {{form_label(form.image)}}
        {{form_errors(form.image)}}
        {{form_widget(form.image,{'attr':{'class': 'form-control'}})}}

        {{form_label(form.tags)}}
        {{form_errors(form.tags)}}
        {{form_widget(form.tags,{'attr':{'class': 'form-control','placeholder' :'Ingresa al menos 4 etiquetas distintas separadas por comas que describan el contenido de tu post.'}})}}
        <br>
        <p>
            <input class="btn btn-default" type="submit" value="Submit">
        </p>

        {{form_row(form._token) }}
        {{form_rest(form) }}
        {{form_end(form) }}

        </form>
    </article>
{% endblock %}