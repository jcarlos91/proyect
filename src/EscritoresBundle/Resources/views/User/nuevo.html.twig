{% extends 'EscritoresBundle::main.html.twig' %}
{% block title %}Nuevo Usuario{% endblock %}
{% block contenido %}
	<section class="container">
		<article class="col-md-12">
			<h1>Nuevo Usuario</h1>
			{{ form_start(form) }}
			{{ form_errors(form) }}
		
				{{form_label(form.username,'Usuario:')}}
				{{form_widget(form.username,{'attr':{'class': 'form-control'} })}}
				{% if form_errors(form.username) %}
					{{form_errors(form.username)}}
				{% endif %}
				
				{{form_label(form.password,'Contrase√±a:')}}
				{{form_errors(form.password)}}
				{{form_widget(form.password,{ 'full_name': 'pass','attr':{'class': 'form-control'} })}}
			
				{{form_label(form.email,'Email:')}}
				{{form_widget(form.email,{'attr':{'class':'form-control'}})}}{{form_errors(form.email)}}
				<br>
				<input class="btn btn-default" type="submit">
			{{ form_row(form._token) }}
			{{ form_rest(form) }}
			{{ form_end(form) }}
		</article>
	</section>
{% endblock %}
{% block sidebar %}{% endblock %}